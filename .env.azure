# Azure Environment Configuration
# Copy this to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-key-here
CHAT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Azure Storage Configuration (Option 1: Connection String - Recommended)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net

# Azure Storage Configuration (Option 2: Account + Key)
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# Azure Container Names
AZURE_CONTAINER_NAME=documents
AZURE_CHROMADB_CONTAINER=chromadb

# Application Configuration
DOC_ID=doc-001
THRESHOLD=0.15
TOP_K=6

# Azure App Service (automatically set by platform)
# WEBSITE_HOSTNAME=your-app.azurewebsites.net
# WEBSITES_PORT=8000